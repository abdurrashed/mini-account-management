@page
@model MiniAccountManagement.Web.Pages.Accounts.CreateModel
@{

    ViewData["Title"] = "Create Account";
}


<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h2 class="card-title mb-0">@ViewData["Title"]</h2>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="row">
                            <div class="col-12 col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Account.AccountCode" class="form-label fw-bold"></label>
                                    <input asp-for="Account.AccountCode" class="form-control form-control-lg" />
                                    <span asp-validation-for="Account.AccountCode" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-12 col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Account.AccountName" class="form-label fw-bold"></label>
                                    <input asp-for="Account.AccountName" class="form-control form-control-lg" />
                                    <span asp-validation-for="Account.AccountName" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-12 col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Account.AccountType" class="form-label fw-bold"></label>
                                    <input asp-for="Account.AccountType" class="form-control form-control-lg" />
                                    <span asp-validation-for="Account.AccountType" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-12 col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Account.ParentAccountId" class="form-label fw-bold">Parent Account</label>
                                    <select asp-for="Account.ParentAccountId" class="form-control form-select form-select-lg" asp-items="Model.ParentAccounts">
                                        <option value="">-- None --</option>
                                    </select>
                                    <span asp-validation-for="Account.ParentAccountId" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="form-group mb-4">
                            <label asp-for="Account.Description" class="form-label fw-bold"></label>
                            <textarea asp-for="Account.Description" class="form-control" rows="4" placeholder="Enter account description..."></textarea>
                            <span asp-validation-for="Account.Description" class="text-danger small"></span>
                        </div>
                        
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-page="Index" class="btn btn-outline-secondary btn-lg me-md-2">
                                <i class="fas fa-arrow-left me-2"></i>Back to List
                            </a>
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-plus-circle me-2"></i>Create Account
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}