@page
@model MiniAccountManagement.Web.Pages.Accounts.IndexModel
@{

    ViewData["Title"] = "Chart of Accounts";
}



<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="text-primary mb-0">
                    <i class="fas fa-chart-line me-2"></i>@ViewData["Title"]
                </h2>
                <a asp-page="Create" class="btn btn-success btn-lg shadow-sm">
                    <i class="fas fa-plus me-2"></i>Create New Account
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-light border-bottom-0">
                    <h5 class="card-title mb-0 text-muted">
                        <i class="fas fa-table me-2"></i>Account Structure
                    </h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover table-striped mb-0">
                            <thead class="table-dark">
                                <tr>
                                    <th scope="col" class="fw-bold">
                                        <i class="fas fa-hashtag me-2"></i>Account Code
                                    </th>
                                    <th scope="col" class="fw-bold">
                                        <i class="fas fa-tag me-2"></i>Account Name
                                    </th>
                                    <th scope="col" class="fw-bold">
                                        <i class="fas fa-layer-group me-2"></i>Account Type
                                    </th>
                                    <th scope="col" class="fw-bold">
                                        <i class="fas fa-info-circle me-2"></i>Description
                                    </th>
                                    <th scope="col" class="text-center fw-bold">
                                        <i class="fas fa-cogs me-2"></i>Actions
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var account in Model.Accounts)
                                {
                                    <tr class="border-bottom">
                                        <td class="fw-bold text-primary">@account.AccountCode</td>
                                        <td class="fw-semibold">@account.AccountName</td>
                                        <td>
                                            <span class="badge bg-primary rounded-pill">@account.AccountType</span>
                                        </td>
                                        <td class="text-muted">@account.Description</td>
                                        <td class="text-center">
                                            <div class="btn-group" role="group">
                                                <a asp-page="Edit" asp-route-id="@account.Id" 
                                                   class="btn btn-outline-warning btn-sm">
                                                    <i class="fas fa-edit"></i> Edit
                                                </a>
                                                <a asp-page="Delete" asp-route-id="@account.Id" 
                                                   class="btn btn-outline-danger btn-sm">
                                                    <i class="fas fa-trash"></i> Delete
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                    @if (account.Children.Count > 0)
                                    {
                                        @foreach (var child in account.Children)
                                        {
                                            <tr class="bg-light border-start border-primary border-3">
                                                <td class="text-secondary ps-4">
                                                    <i class="fas fa-arrow-right me-2 text-muted"></i>@child.AccountCode
                                                </td>
                                                <td class="text-secondary">@child.AccountName</td>
                                                <td>
                                                    <span class="badge bg-secondary rounded-pill">@child.AccountType</span>
                                                </td>
                                                <td class="text-muted small">@child.Description</td>
                                                <td class="text-center">
                                                    <div class="btn-group" role="group">
                                                        <a asp-page="Edit" asp-route-id="@child.Id" 
                                                           class="btn btn-outline-warning btn-sm">
                                                            <i class="fas fa-edit"></i> Edit
                                                        </a>
                                                        <a asp-page="Delete" asp-route-id="@child.Id" 
                                                           class="btn btn-outline-danger btn-sm">
                                                            <i class="fas fa-trash"></i> Delete
                                                        </a>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="card-footer bg-light text-muted text-center py-2">
                    <small>
                        <i class="fas fa-info-circle me-1"></i>
                        Parent accounts are shown in bold, child accounts are indented with arrows
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>