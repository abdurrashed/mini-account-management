@page "{id:Guid}"
@model MiniAccountManagement.Web.Pages.Accounts.EditModel
@{
    ViewData["Title"] = "Edit Chart of Account";
}


<form method="post">
    <input type="hidden" asp-for="Account.Id" />

    <div class="form-group">
        <label asp-for="Account.AccountCode"></label>
        <input asp-for="Account.AccountCode" class="form-control" />
        <span asp-validation-for="Account.AccountCode" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Account.AccountName"></label>
        <input asp-for="Account.AccountName" class="form-control" />
        <span asp-validation-for="Account.AccountName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Account.AccountType"></label>
        <input asp-for="Account.AccountType" class="form-control" />
        <span asp-validation-for="Account.AccountType" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Account.Description"></label>
        <textarea asp-for="Account.Description" class="form-control"></textarea>
        <span asp-validation-for="Account.Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Account.ParentAccountId">Parent Account</label>
        <select asp-for="Account.ParentAccountId" class="form-control" asp-items="Model.ParentAccounts">
            <option value="">-- None --</option>
        </select>
        <span asp-validation-for="Account.ParentAccountId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-page="Index" class="btn btn-secondary">Back to List</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

