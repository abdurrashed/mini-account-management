
@page
@model MiniAccountManagement.Web.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Sign In";
}

<div class="container mt-5" style="max-width: 500px;">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white text-center">
            <h3>@ViewData["Title"]</h3>
        </div>
        <div class="card-body">
            <!-- Show global errors (like wrong username/password) -->
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <div>@error.ErrorMessage</div>
                    }
                </div>
            }

            <form method="post">
                <!-- Username -->
                <div class="mb-3">
                    <label asp-for="Input.UserName" class="form-label"></label>
                    <input asp-for="Input.UserName" class="form-control" />
                    <span asp-validation-for="Input.UserName" class="text-danger"></span>
                </div>

                <!-- Password -->
                <div class="mb-3">
                    <label asp-for="Input.Password" class="form-label"></label>
                    <input asp-for="Input.Password" class="form-control" type="password" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

             

                <!-- Submit -->
                <div class="d-grid">
                    <button type="submit" class="btn btn-primary">Sign In</button>
                </div>
            </form>
        </div>
    </div>
    <div class="mt-5 text-muted" style="font-size: 0.9rem;">
        <ul>
            <li><strong>Admin</strong> — Username: <code>admin123</code>, Password: <code>Admin@User@123</code></li>
            <li><strong>Accountant</strong> — Username: <code>accountant123</code>, Password: <code>Accountant@123</code></li>
        </ul>

        <p>Note: Users who register will be assigned the Viewer role by default.</p>
    </div>


</div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
